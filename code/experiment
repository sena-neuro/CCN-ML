#!/usr/bin/env bash

# for i in /data2/s*.mat
# paths for the server "/auto/data2/ser/Data/Video/" "/auto/data2/oelmas/EEG_AgentPerception_NAIVE/Analysis/Experiments /"
# paths for huseyin's computer  "/Users/huseyinelmas/Desktop/data/Video/" "/Users/huseyinelmas/Desktop/Experiments/$i/"

Exps=( "E100w100s" "E100w50s")
declare -A params

params["E100w100s"]="100 100"
params["E100w50s"]="100 50"
#params["E40w20s"]="40 20"
#params["E25w25s"]="25 25"
start="0"
end="400"
minTrial="84"
type1="Video"
type2="Still"
for i in "${Exps[@]}"; do
    echo Experiment $i is started
    in_path="/Users/huseyinelmas/Desktop/data/"
    sv_path="/Users/huseyinelmas/Desktop/Experiments/$i/"
    mkdir -p  $sv_path
    python ccn_wo_prior_main.py "$start" "$end" ${params[$i]} "$minTrial" "$in_path$type1/"  "$sv_path" "$type1"
    python ccn_wo_prior_main.py "$start" "$end" ${params[$i]} "$minTrial" "$in_path$type2/"  "$sv_path" "$type2"
done
echo Done


